<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="mapper.fileMapper.IFileMapper" >
    <select id="getFileList" resultType="hashmap">
        SELECT * FROM filelist ORDER BY createTime DESC
    </select>


    <insert id="addFile" parameterType="hashmap">
       INSERT INTO filelist VALUES (#{id},#{fileName},#{fileUrl},#{createTime})
    </insert>

    <delete id="deleteFile" parameterType="hashmap">
        DELETE FROM filelist WHERE fileUrl=#{fileUrl}
    </delete>
</mapper>