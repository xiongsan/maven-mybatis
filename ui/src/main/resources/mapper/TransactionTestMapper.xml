<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="mapper.TransactionTestMapper" >
    <select id="getUserList" resultType="bean.User" parameterType="bean.User">
        SELECT  id,account,`name`,`password`,email,telephone,`status`,delete_flag deleteFlag,operation_permission operationPermission,roles FROM  rc_user WHERE 1=1 AND  delete_flag = 0
        <if test="name != null  and  name != ''">
            AND name LIKE '%${name}%'
        </if>
        ORDER  BY create_date DESC
    </select>
    <insert id="addUser" parameterType="bean.User">
        INSERT INTO rc_user(id,account,name,password)
        VALUE (#{id},#{account},#{name},#{password})
    </insert>
    <insert id="addIncorrectUser" parameterType="bean.User">
        INSERT INTO rc_user(id,account,name,password)
        VALUE (#{id},#{account},#{name},#{password})
    </insert>
</mapper>